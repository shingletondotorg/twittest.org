<div class="whole-page-wrapper">
	<%= render 'shared/score_menu' %>
	<div class="whole-page left-section" style="background-color:#fff">

<script type="text/javascript">

		
			var pie_tweet_real;
		
			$(document).ready(function() {
				Highcharts.setOptions({
				    colors: ['#007236', '#9e0b0f','#f7941d']
				});
				
				
			
				
				pie_tweet_real = new Highcharts.Chart({
					chart: {
							 renderTo: 'pie-tweet-real',
							 backgroundColor: '#fff',
					         plotBackgroundColor: null,
					         plotBorderWidth: null,
					         plotShadow: false
					      },
					      title: {
					         
								text: ''
					      },
					      tooltip: {
						
					         formatter: function() { var s; if (this.point.name) { s = this.y; } return s; }
					      },
					      plotOptions: {
					         pie: {
					            allowPointSelect: true,
					            cursor: 'pointer',
					            dataLabels: {
					               enabled: false
					            },
					            showInLegend: true
					         }
					      },
						legend:{
							 backgroundColor: '#fff',
						},
					       series: [{
					         type: 'pie',
					         name: 'Browser share',
							color: ['green','red', 'yellow'],
					         data: [
					           	    ['Agreed', <%= Vote.tweet_real_agreed(current_user) %>],
								    ['Disagreed', <%= Vote.tweet_real_disagreed(current_user) %>]
					         ]
					      }]
				});
				
			
			});

		</script>


			<div id="pie-tweet-real" style="width:225px; height:225px;"></div>
		</div>
			<div class="whole-page middle-section">
				
				<h3>Position in Twittest</h3>
				<% @twittest_leaderboard.each do |user| %>
					<div>
						<span style="float:right"><%= user.position_twittest_voting_my_real %> </span>
						<%= user.display_name %>
					</div>
				<% end %>
				<hr />
				<h3>Position in <%= current_user.school.name%></h3>
					<% @school_leaderboard.each do |user| %>
						<div>
							<span style="float:right"><%= user.position_in_school_voting_my_real %> </span>
							<%= user.display_name %>
						</div>
					<% end %>

			

			</div>
			<div class="whole-page right-section" style="min-height: 300px;">
				<h3>This Section</h3>
				<p>
						This chart shows your progress on how well you are at convincing other people when you are tweeting as yourself.
				</p>

				
			
			</div>
		</div>